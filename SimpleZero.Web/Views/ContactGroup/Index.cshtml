
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Abp.Application.Services.Dto;
@using SimpleZero.Contacts.Dto;
@using SimpleZero.Contacts;
@model ListResultDto<ContactGroupListDto>


<h1>@L("ContactGroup")</h1>
<div class="row">
    <div class="col-md-12">
        <button data-toggle="modal" data-target="#ContactGroupCreateModal" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> @L("CreateNewGroup")</button>
        <table class="table">
            <thead>
                <tr>
                    <th>@L("Name")</th>
                    <th>@L("Limited")</th>
                    <th>@L("Status")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Items)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.LimitedTotal</td>
                        <td>@Html.CheckBox("IsActive", user.IsActive) @L("IsActive")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="ContactGroupCreateModal" tabindex="-1" role="dialog" aria-labelledby="ContactGroupModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form name="CreateForm" role="form" novalidate class="form-validation">
                <div class="modal-header">
                    <h4 class="modal-title">
                        <span>@L("CreateNewContactGroup")</span>
                    </h4>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label>@L("Name")</label>
                        <input class="form-control" type="text" name="UserName" required maxlength="@ContactGroup.MaxNameLength" minlength="2">
                    </div>

                    <div class="form-group">
                        <label>@L("LimitedTotal")</label>
                        <input type="number" name="LimitedTotal" class="form-control" required>
                    </div>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="IsActive" value="true" value="true" checked="checked"> @L("IsActive")
                        </label>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">@L("Cancel")</button>
                    <button type="submit" class="btn btn-primary blue"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
                </div>
            </form>
        </div>
    </div>
</div>





